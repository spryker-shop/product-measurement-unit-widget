{% extends model('component') %}

{% define config = {
    name: 'measurement-unit-item',
    tag: 'p',
} %}

{% define data = {
    cartItem: required,
    quantitySalesUnit: required,
    quantitySalesUnitPrecision: required,
    hasQuantitySalesUnit: required,
} %}

{% block body %}
    {% if data.hasQuantitySalesUnit %}
        {% set salesUnitName = data.cartItem.quantitySalesUnit.productMeasurementUnit.name | default('') %}

        <small class="text-secondary">
            [= {{ data.quantitySalesUnitPrecision }} {{ data.quantitySalesUnit.productMeasurementUnit.name | default | trans | trans }}]
        </small>
    {% endif %}
{% endblock %}
