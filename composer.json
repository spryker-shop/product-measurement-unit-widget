{
  "name": "spryker-shop/product-measurement-unit-widget",
  "description": "ProductMeasurementUnitWidget module",
  "license": "proprietary",
  "require": {
    "php": ">=7.1",
    "spryker/kernel": "^3.16.0",
    "spryker/product-measurement-unit-storage": "^0.1.0",
    "spryker/product-quantity-storage": "^0.1.0"
  },
  "require-dev": {
    "spryker-shop/cart-page": "^0.5.0",
    "spryker-shop/product-detail-page": "^0.4.0"
  },
  "suggest": {
    "spryker-shop/cart-page": "If you want to use QuantitySalesUnitWidgetPlugin: ^0.5.0",
